<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1E1E1E"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your Account"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <!-- Placeholder for Image -->
            <ImageView
                android:id="@+id/uploadedPhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/oval"
                android:layout_marginEnd="20dp"
                android:background="@drawable/oval_green" />

            <!-- Upload Button -->
            <Button
                android:id="@+id/uploadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Photo"
                android:background="@drawable/input_field"
                android:padding="10dp"
                android:textSize="10sp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- ProgressBar added -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/regusename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:padding="10dp"
            android:background="@drawable/input_field"
            android:textColor="#E1D9D1"
            android:textColorHint="#B3B3B3"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" />
        <EditText
            android:id="@+id/regpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:padding="10dp"
            android:background="@drawable/input_field"
            android:textColor="#E1D9D1"
            android:textColorHint="#B3B3B3"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" />
        <EditText
            android:id="@+id/resgpos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Position Ex. Kapitan"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_field"
            android:textColor="#FFFFFF"
            android:textColorHint="#B3B3B3"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" />
        <EditText
            android:id="@+id/regname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_field"
            android:textColor="#E1D9D1"
            android:textColorHint="#B3B3B3"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" />
        <EditText
            android:id="@+id/regage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:inputType="number"
            android:padding="10dp"
            android:background="@drawable/input_field"
            android:textColor="#E1D9D1"
            android:textColorHint="#B3B3B3"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" />
        <EditText
            android:id="@+id/regcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact No#"
            android:inputType="number"
            android:padding="10dp"
            android:background="@drawable/input_field"
            android:textColor="#E1D9D1"
            android:textColorHint="#B3B3B3"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"/>
        <EditText
            android:id="@+id/regemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="10dp"
            android:background="@drawable/input_field"
            android:textColor="#E1D9D1"
            android:textColorHint="#B3B3B3"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" />
        <EditText
            android:id="@+id/regstreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Street"
            android:padding="10dp"
            android:background="@drawable/input_field"
            android:textColor="#FFFFFF"
            android:textColorHint="#B3B3B3"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" />
        <EditText
            android:id="@+id/regbarangay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Barangay"
            android:padding="10dp"
            android:background="@drawable/input_field"
            android:textColor="#E1D9D1"
            android:textColorHint="#B3B3B3"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" />
        <Button
            android:id="@+id/saveaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:padding="10dp"
            android:background="@drawable/input_field" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
